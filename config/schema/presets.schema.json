{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "required": ["description", "sizes", "formats", "quality", "style", "provider", "options", "output_subdir"],
    "properties": {
      "description": {"type": "string"},
      "sizes": {"type": "array", "items": {"type": "array", "items": {"type": "integer"}, "minItems": 2, "maxItems": 2}},
      "formats": {"type": "array", "items": {"type": "string", "enum": ["jpg","jpeg","png","webp","avif"]}},
      "quality": {"type": "integer", "minimum": 1, "maximum": 100},
      "style": {"type": "object", "required": ["base","negative"], "properties": {"base": {"type":"string"}, "negative": {"type":"string"}}},
      "provider": {"type": "string"},
      "options": {"type": "object"},
      "output_subdir": {"type": "string"}
    }
  }
}
